@model IEnumerable<Common.Model.StudentModel>

@{
    ViewBag.Title = "Student Details";
}


<div class="row header-body">
    <div class="col-sm-12">
        <div class="col-sm-6">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="col-sm-6">
            <button class="btn btn-link button-header-link" onclick="location.href='@Url.Action("ManageStudent", "Student")'">Add New</button>
        </div>

    </div>
</div>


<div class="container"> 
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="StudentTable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"></table>
    </div>
</div>

<div class="modal fade" id="removeUser" tabindex="-1" role="dialog" aria-labelledby="logoutLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
            </div>

            <div class="modal-body">
                <p>Are you sure?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok" id="ConfDelS">OK</a>
            </div>
        </div>
    </div>
</div>

